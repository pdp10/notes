[user]
	name = Name Surname
	email = my@email.com
[credential]
	helper = store --file ~/.my-credentials
[alias]
	log2 = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[core]
	editor = vim
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
    prompt = false
[commit]
    gpgsign = false
